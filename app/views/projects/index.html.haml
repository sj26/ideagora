- content_for :title do
  All projects

- content_for :content_header do
  - if current_user
    #actions
      %ul.actions.as-buttons
        %li= link_to 'Add a project', new_user_project_path(current_user)

%table.projects
  %thead
    %tr
      %th.name Name
      %th.people Owner
      %th.helpme Needs Help
      %th.status Status
  %tbody
    - @projects.each do |project|
      %tr.project{:class => cycle('odd','even')}
        %td
          = link_to project.name, user_project_path(project.owner, project), :class => "name"
          - if project.description
            .description
              = smart_description(project)
        %td= link_to project.owner, user_path(project.owner)
        %td= "Yes" if project.help?
        %td= project.status
