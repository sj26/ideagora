%article.event.talk.with-avatar{ :"data-id" => talk.id, :"data-start" => talk.start_at.to_time.to_i }
  %header
    %h3.title
      = link_to talk.name, talk, :class => "item-link"
    %div.presenter
      %a{:href => user_path(talk.user) }
        = user_avatar(talk.user)
        %span.name= talk.user
    %div.where
      %time.start{ :datetime => talk.start_at, :"data-unix" => talk.start_at.to_time.to_i }
        = hour_of talk.start_at
      %span.place
        = talk.venue
  %div.description
    = textilize(talk.description).try(:html_safe)