- content_for :title do
  = @user.full_name

= render :partial => 'user_card', :locals => {:user => @user}

.main
  %section.about_me
    - if @user.bio
      %article.bio
        %h2 About me
        = textilize(@user.bio)

    %p.skills Skills: #{@user.skill_list.join(', ')}

    %p.interests Interests: #{@user.interest_list.join(', ')}


  %section.projects
    %h2= "#{@user.first_name}'s projects"
  
    - if @user.projects.any?
      = render @user.projects
    - else
      %p
        = "#{@user.first_name} has no projects."
